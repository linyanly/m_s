<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.ms.dao.mybatisDao.PermissionMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.lin.ms.document.entity.Permission">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="url" property="url" />
	</resultMap>
    <select id="findUrlsByUserId" resultType="java.lang.String">
		select
		tp.url
		from t_user_role tur left join t_role_permission trp on tur.role_id = trp.role_id
		left join t_permission tp on trp.permission_id = tp.id
		where tur.user_id = #{id}
	</select>

</mapper>
